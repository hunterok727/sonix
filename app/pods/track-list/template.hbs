<h2>{{model.title}}</h2>

<p>
    {{#link-to 'track/new'}}Add a new track{{/link-to}}
</p>

<ul>
    {{#each model.persistentTracks as |track| }}
        <li>
          {{#link-to 'track' track.id }}
            {{track.artist}} - {{track.title}}
          {{/link-to}}
        </li>
    {{else}}
        <li class="empty">No tracks found</li>
    {{/each}}
</ul>
<ul>
  {{#link-to 'track-list' tagName='li'}}
    {{link-to 'Page 2' 'track-list.paging' 2 0}}
  {{/link-to}}
</ul>

{{outlet}}
