<form {{action 'save' on="submit"}}>
    <p>{{input placeholder="title" required=true value=title}}</p>
    <p>
      {{input placeholder="artist" required=true value=artist}}
        {{#unless artistStartsWithUpperCase}}
          <span>Respect the Artist</span>
        {{/unless}}
    </p>
    <p><input type="submit" value="Add"></p>
</form>


{{yield}}
